<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<%= link_to "Editing", edit_post_path(@post), :class => 'btn btn-warning' %>
<%= link_to "Delete", post_path(@post), method: :delete, data:
 {confirm: "Are you sure you want to delete the article?"}, 
 :class => 'btn btn-danger' %>
<hr>
<h1>All Comments</h1>
  <% @post.comments.each do |comment| %>
  <div class="alert alert-light"> 
    <p><strong><%= comment.username %></strong>: <%= comment.body %></p> 

  </div>
<% end %>
 <h3>Add comments</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        User<br>
        <%= f.text_field(:username, {:class => 'form-control'}) %> 
    </p>
    <p>
        Comment text<br>
        <%= f.text_area(:body, {:class => 'form-control'}) %>  
    </p>
    <p>
        <%= f.submit("Add comment", {:class => 'btn btn-warning'}) %>
    </p>
<% end %>