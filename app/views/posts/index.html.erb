<h1>All Posts</h1>
  <% @post.each do |post| %>
  <div class="alert alert-light">  
    <h3><%= post.title %></h3>
    <h3><%= post.body %></h3>
    <%= link_to "Read more", post_path(post), :class => 'btn btn-outline-primary' %>
  </div>
<% end %>
 

